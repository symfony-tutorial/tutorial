    {% extends '::base.html.twig' %}

    {% block body -%}
    <h1>Country list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th>Currency</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('country_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.currency }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('country_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('country_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

            <ul>
            <li>
                <a href="{{ path('country_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
            <table>
        <tr>
            <td>Navigation</td>
            {% for page in 1..totalPages %}
                <td>
                    <a href="{{ path('country', { 'page': page }) }}">
                        {{page}}
                    </a>
                </td>
            {% endfor %}
        </tr>
    </table>
        {% endblock %}
